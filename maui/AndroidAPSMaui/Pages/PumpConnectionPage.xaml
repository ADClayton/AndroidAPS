<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AndroidAPSMaui.ViewModels"
             x:Class="AndroidAPSMaui.Pages.PumpConnectionPage"
             Title="Pump Connection">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label Text="Dash pump connection" FontSize="22" FontAttributes="Bold" />
            <Label Text="Provide the pod Bluetooth address and identifier already in use by the primary AndroidAPS instance." />
            <Entry Placeholder="AA:BB:CC:DD:EE:FF" Text="{Binding PodAddress}" />
            <Entry Placeholder="Pod identifier" Text="{Binding PodIdentifier}" />
            <Button Text="Scan for nearby devices" Command="{Binding ScanDevicesCommand}" />
            <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                <ActivityIndicator IsRunning="{Binding IsScanning}" IsVisible="{Binding IsScanning}" />
                <Label Text="{Binding ScanStatus}" />
            </HorizontalStackLayout>
            <CollectionView ItemsSource="{Binding NearbyDevices}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,Auto" Padding="4" ColumnSpacing="12">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" />
                                <Label Text="{Binding Address}" FontSize="12" />
                            </VerticalStackLayout>
                            <Button Text="Use" Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:PumpConnectionViewModel}}, Path=SelectDeviceCommand}" CommandParameter="{Binding .}" Grid.Column="1" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="Save" Command="{Binding SaveCommand}" />
            <Label Text="Commands are executed silently; the UI intentionally avoids bolus or basal actions." />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
